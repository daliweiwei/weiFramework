body
    margin 0
    height 100%
    font-family Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, "\5FAE\8F6F\96C5\9ED1", Arial, sans-serif
#app
    font-family 'Avenir', Helvetica, Arial, sans-serif
    -webkit-font-smoothing antialiased
    -moz-osx-font-smoothing grayscale
    color #2c3e50
    position absolute
    top 0
    left 0
    right 0
    bottom 0
.liang-layout
    position relative
    min-width 100%
    height 100%
    background #fff
    overflow hidden
.liang-top-aside
    position relative
    display flex
    width 100%
    height 50px
    box-shadow 0 0 8px 0 rgba(0, 0, 0, 0.06)
    z-index 10
.liang-content-main
    position relative
    display flex
    width 100%
    height 100%
    background #F7F9FC
    overflow hidden
    .liang-left-aside
        display block
        width 160px
        height 100%
        box-shadow 2px 0 8px rgba(0, 0, 0, 0.05)
        background #fff
        .el-menu-item
            text-align left
        .el-submenu
            .el-menu-item
                min-width 159px
    .liang-right-aside
        flex 1
        position relative
